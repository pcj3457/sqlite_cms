
html, body {
	color: #000;
	background-color: #FFFFFF;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 10px;
	text-align: center;
	width: 100%;
	padding: 0;
	margin: 0 auto 20px auto;
}
A{TEXT-DECORATION: none;}
A:link {font-size:12px;color: #000000;}
A:visited {font-size:12px;color: #000000}
A:active {font-size:12px;color: #000000}
A:hover{font-size:12px;COLOR: #FF0000;position: relative; right: 0px; top: 1px}

strong, b {
	font-weight: bold !important;
}
em, i {
	font-style: italic !important;
}
blockquote, indent {
	margin-left: 15px !important;
}

h2 {
	font-weight:bold;
	font-size: 170%;
	margin: 0 0 10px 0;
}

h3 {
	font-weight:bold;
	font-size: 150%;
	margin: 0 0 10px 0;
}
h4 {
	font-weight:bold;
	font-size: 130%;
	margin: 0 0 3px 0;
}
h5 {
	font-weight:bold;
	font-size: 110%;
	font-weight:bold;
	margin: 0 0 3px 0;
}

ul li {
	padding: 0;
	margin: 0;
}

#mainContentFrame ul li {
	margin: 0;
	padding: 0 0 0 3em;
	list-style-type: none;
	background: transparent url('../img/bul_triangle.gif') no-repeat scroll 13px 0.5em;
}
#mainContentFrame ol li {
	margin: 0 0 0 3em;
	padding: 0;
	list-style-type: decimal;
}
#mainContentFrame ul.square li {
	margin: 0;
	padding: 0 0 0 10px;
	list-style-type: none;
	background: transparent url('../img/ico_list_square.gif') no-repeat scroll 0px 0.5em;
}
#mainContentFrame ol.number li {
	margin: 0 0 0 3em;
	padding: 0;
	list-style-type: decimal;
}

#mainContentFrame ul.disc {
	padding: 0 0 0 2em;
}
#mainContentFrame ul.disc li {
	list-style-type: disc;
	background: none;
}
#mainContentFrame ul.circle {
	padding: 0 0 0 2em;
}
#mainContentFrame ul.circle li {
	list-style-type: circle;
	background: none;
}
#mainContentFrame ul.noBullet li{
	list-style-type: none;
	background: url();
	margin: 0;
	padding: 0 0 0 0;
	list-style-type: none;
}

p {
	margin: 0 0 13px 0;
	/*
	text-align: justify;
	*/
